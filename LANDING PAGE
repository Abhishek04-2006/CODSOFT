    <script>
        // Star background
        document.addEventListener('DOMContentLoaded', () => {
            const starsContainer = document.querySelector('.stars');
            for (let i = 0; i < 100; i++) {
                const star = document.createElement('div');
                star.className = 'star';
                star.style.top = Math.random() * 100 + 'vh';
                star.style.left = Math.random() * 100 + 'vw';
                starsContainer.appendChild(star);
            }
        });
        // Planet hover effect
        const planet = document.querySelector('.planet');
        planet.addEventListener('mouseover', () => {
            planet.style.boxShadow = '0 0 60px 20px #ff512f';
        });
        planet.addEventListener('mouseout', () => {
            planet.style.boxShadow = '0 0 40px 10px #ffecd2';
        });
        // Superman intro overlay
        document.addEventListener('DOMContentLoaded', function() {
            const intro = document.getElementById('superman-intro');
            intro.addEventListener('click', function() {
                intro.classList.add('hide');
                setTimeout(() => intro.style.display = 'none', 700);
            });
        });
        // Superhero shadows animation
        const shadows = document.querySelectorAll('.superhero-shadow');
        shadows.forEach((shadow, index) => {
            shadow.style.setProperty('--i', index);
            shadow.style.animationDelay = `${index * 2.5}s`;
        });
        // Fade in Superman intro
        setTimeout(() => {
            const intro = document.getElementById('superman-intro');
            intro.classList.add('hide');
        }, 3000);
        // Show message modal on Get Started button click
        document.addEventListener('DOMContentLoaded', function() {
            const ctaBtn = document.querySelector('.cta-btn');
            const modal = document.getElementById('message-modal');
            const closeBtn = document.getElementById('modalClose');
            if (ctaBtn && modal && closeBtn) {
                ctaBtn.addEventListener('click', function() {
                    modal.classList.remove('modal-hidden');
                });
                closeBtn.addEventListener('click', function() {
                    modal.classList.add('modal-hidden');
                });
                // Optional: close modal on background click
                modal.addEventListener('click', function(e) {
                    if (e.target === modal) modal.classList.add('modal-hidden');
                });
            }
        });
    </script>
